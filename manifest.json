{
  "manifest_version" : 2,

  "name": "HTML To Clipboard",
  "description": "Mouse over regions of page and click to copy sanitized HTML to clipboard",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}
